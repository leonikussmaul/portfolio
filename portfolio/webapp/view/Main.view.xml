<mvc:View
    controllerName="myportfolio.portfolio.controller.Main"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:u="sap.uxap"
    xmlns:form="sap.ui.layout.form"
    xmlns:f="sap.f"
    xmlns:l="sap.ui.layout"
    xmlns:core="sap.ui.core"
    xmlns:customData="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
    xmlns:layout="sap.ui.layout"
    xmlns:card="sap.f.cards"
    xmlns:smartchart="sap.ui.comp.smartchart"
    xmlns:cssgrid="sap.ui.layout.cssgrid"
    xmlns:cards="sap.f.cards"

            >
    <f:DynamicPage
        id="page"
        title="{i18n>title}"
        backgroundDesign="List"
    >
	
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <Title
                        text="Welcome to my UX/UI Portfolio."
                        id="headerTitle"
                    />
                </f:heading>
					<f:actions>
						<OverflowToolbar>
							<SegmentedButton selectedKey="Both" selectionChange="onSelectType">
					<items>
					<SegmentedButtonItem text="Both" width="50px" key="Both" />
						<SegmentedButtonItem text="UI" width="60px"  key="UI" icon="sap-icon://syntax"/>
						<SegmentedButtonItem text="UX" width="60px" key="UX"  icon="sap-icon://activate"  />
					</items>
				</SegmentedButton>
						</OverflowToolbar>
					</f:actions>
            </f:DynamicPageTitle>
        </f:title>
        <f:header />

        <f:content>
          
   <ScrollContainer
                height="100%"
                width="100%"
                vertical="true"
            >
                        <Carousel
						id="portfolioList"
                            height="100%"
                            width="auto"
                            pages="{
				path: 'portfolioModel>/items'
			}"
                        >
                            <customLayout>
				<CarouselLayout visiblePagesCount="2" />
			</customLayout>
                            <ScrollContainer
                                vertical="false"
                                horizontal="false"
                                class="sapUiContentPadding"
                            >
                                <f:Card
                                    height="100%"
                                    width="100%"
                                >
                                    <f:header>
                                        <cards:Header
                                            title="{portfolioModel>name}"
                                            subtitle="{portfolioModel>subTitle}"
                                            iconSrc="{portfolioModel>icon}"
                                            iconDisplayShape="Square"
										
                                        />
                                    </f:header>
                                    <f:content>
                                        <l:VerticalLayout
                                            class="sapUiContentPadding"
                                            width="100%"
                                        >
                                            <l:BlockLayout>
                                                <l:BlockLayoutRow>
                                                    <l:BlockLayoutCell
                                                        width="1"
                                                    >
                                                        <FormattedText
                                                            class="sapUiResponsiveMargin sapUiNoMarginTop"
                                                            htmlText="{portfolioModel>description}"
                                                        />

                                                        <HBox
                                                            justifyContent="Center"
                                                            class="sapUiResponsiveMargin"
                                                            alignItems="Center"
                                                        >
                                                            <Image
                                                                src="{portfolioModel>image}"
                                                                press="onOpenDemo"
                                                                width="100%"
                                                                alt="Screenshot #1 of Demand Genius UI"
                                                            />
                                                        </HBox>
                                                        <FormattedText
                                                            class="sapUiResponsiveMargin"
                                                            htmlText="{portfolioModel>details}"
                                                        />
                                                    </l:BlockLayoutCell>
                                                </l:BlockLayoutRow>
                                            </l:BlockLayout>
                                        </l:VerticalLayout>
                                    </f:content>
                                </f:Card>
                            </ScrollContainer>
                        </Carousel>
                
				 </ScrollContainer>
        </f:content>
		 
    </f:DynamicPage>
	
</mvc:View>
