<mvc:View
    controllerName="myportfolio.portfolio.controller.Videos"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:u="sap.uxap"
    xmlns:form="sap.ui.layout.form"
    xmlns:f="sap.f"
    xmlns:l="sap.ui.layout"
    xmlns:core="sap.ui.core"
    xmlns:customData="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
    xmlns:layout="sap.ui.layout"
    xmlns:card="sap.f.cards"
    xmlns:smartchart="sap.ui.comp.smartchart"
    xmlns:cssgrid="sap.ui.layout.cssgrid"
    xmlns:cards="sap.f.cards"
>
    <f:DynamicPage
        id="page"
        title="{i18n>title}"
        backgroundDesign="List"
    >
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <Title
                        text="My Videos"
                        id="headerTitle"
                    />
                </f:heading>
            </f:DynamicPageTitle>
        </f:title>
        <f:header />

        <f:content>
            <Carousel
                height="auto"
                width="100%"
                pages="{
				path: 'portfolioModel>/videos'
			}"
            >
                <customLayout>
                    <CarouselLayout />
                </customLayout>
                <ScrollContainer
                    vertical="false"
                    horizontal="false"
                    class="sapUiContentPadding"
                >
                    <f:Card
                        height="100%"
                        width="100%"
                    >
                        <f:header>
                            <cards:Header
                                title="{portfolioModel>name}"
                                subtitle="{portfolioModel>subTitle}"
                                iconSrc="{portfolioModel>icon}"
                                iconDisplayShape="Square"
                            />
                        </f:header>
                        <f:content>
                            <HBox
                                alignItems="Start"
                                width="100%"
                                justifyContent="Center"
                                class="sapUiResponsiveMargin"
                            >
                                <Image
                                    src="{portfolioModel>image}"
                                    press="onOpenDemo"
                                    class="sapUiNoMargin"
                                    width="60%"
                                    alt="Screenshot #1 of Demand Genius UI"
                                />
                            </HBox>
                        </f:content>
                    </f:Card>
                </ScrollContainer>
            </Carousel>
        </f:content>
    </f:DynamicPage>
</mvc:View>
