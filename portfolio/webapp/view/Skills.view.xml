<mvc:View
    controllerName="myportfolio.portfolio.controller.Skills"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:u="sap.uxap"
    xmlns:form="sap.ui.layout.form"
    xmlns:f="sap.f"
    xmlns:l="sap.ui.layout"
    xmlns:core="sap.ui.core"
    	xmlns:grid="sap.ui.layout.cssgrid"
    xmlns:smartTable="sap.ui.comp.smarttable"
    xmlns:customData="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
    xmlns:layout="sap.ui.layout"
    xmlns:ui-integration="sap.ui.integration.widgets"
    xmlns:w="sap.ui.integration.widgets"
    xmlns:card="sap.f.cards"
    xmlns:cssgrid="sap.ui.layout.cssgrid"
    	xmlns:cards="sap.f.cards"
>

    <f:DynamicPage
        id="page"
        title="{i18n>title}"
        backgroundDesign="List"
    >
        <f:title>
            <f:DynamicPageTitle>
                <f:heading >
                    <Title 
                        text="Skills &amp; Tools"
                        id="headerTitle"
                    />
                </f:heading>
            </f:DynamicPageTitle>
        </f:title>
        <f:header />

        <f:content>
            <!-- <ScrollContainer
                height="100%"
                width="100%"
                vertical="false"
            > -->

 <HBox width="100%" >

 <core:Icon class="sapUiTinyMarginTop" src="sap-icon://sap-ui5" ></core:Icon>
 <Panel headerText="SAP" height="100%" >

				<layoutData>
					<FlexItemData baseSize="29%" />
				</layoutData>
                    <f:GridContainer
                        id="sapgroup" 
                        columnsChange=".onColumnsChange"
                    >
                        <f:layout>
                            <f:GridContainerSettings
                                rowSize="4rem"
                                columnSize="4rem"
                            />
                        </f:layout>

                      
                         <HBox class="sapUiSmallMarginTopBottom">
                                        <l:HorizontalLayout
                                            id="saptools"
                                            allowWrapping="true"
                                            content="{}"
                                        >
                                            <ToggleButton
                                                text="{portfolioModel>tool}"
                                                press="onPressToggle1"
                                                class="sapUiSmallMarginEnd sapUiTinyMarginBottom"
                                               
                                                 pressed="{portfolioModel>pressed}"
                                            >
                                                <customData>
                                                    <core:CustomData
                                                        key="tool"
                                                        value="{portfolioModel>tool}"
                                                        class="sapUiNoMarginTop sapUiNoMarginBottom"
                                                    />
                                                </customData>
                                            </ToggleButton>
                                        </l:HorizontalLayout>
                                    </HBox>
                    </f:GridContainer>


                </Panel>

 <core:Icon class="sapUiTinyMarginTop" src="sap-icon://education" ></core:Icon>
			<Panel headerText="Skills" height="100%">
				<layoutData>
					<FlexItemData baseSize="16%" />
				</layoutData>
                    <f:GridContainer>
                        <f:layout>
                            <f:GridContainerSettings
                                rowSize="4rem"
                                columnSize="4rem"
                            />
                        </f:layout>

                        <HBox class="sapUiSmallMarginTopBottom">
                                        <l:HorizontalLayout
                                            id="skills"
                                            allowWrapping="true"
                                            content="{}"
                                        >
                                            <ToggleButton
                                                text="{portfolioModel>skill}"
                                                press="onPressToggle1"
                                                class="sapUiSmallMarginEnd sapUiTinyMarginBottom"
                                               
                                                pressed="{portfolioModel>pressed}"

                                            >
                                                <customData>
                                                    <core:CustomData
                                                        key="skill"
                                                        value="{portfolioModel>skill}"
                                                        class="sapUiNoMarginTop sapUiNoMarginBottom"
                                                    />
                                                </customData>
                                            </ToggleButton>
                                        </l:HorizontalLayout>
                                    </HBox>

                    </f:GridContainer>

                    	
			</Panel >
         
			
                    <core:Icon class="sapUiTinyMarginTop" src="sap-icon://settings" ></core:Icon>
			<Panel headerText="Tools" height="100%" >
				<layoutData>
					<FlexItemData baseSize="17%" />
				</layoutData>
                    <f:GridContainer 
                        id="group2"
                        columnsChange=".onColumnsChange"
                    >
                        <f:layout>
                            <f:GridContainerSettings
                                rowSize="4rem"
                                columnSize="4rem" 
                            />
                        </f:layout>
                     
                         <HBox class="sapUiSmallMarginTopBottom">
                                        <l:HorizontalLayout
                                            id="tools"
                                            allowWrapping="true"
                                            content="{}"
                                        >
                                            <ToggleButton
                                                text="{portfolioModel>tool}"
                                                press="onPressToggle1"
                                                class="sapUiSmallMarginEnd sapUiTinyMarginBottom"
                                               
                                                 pressed="{portfolioModel>pressed}"
                                            >
                                                <customData>
                                                    <core:CustomData
                                                        key="tool"
                                                        value="{portfolioModel>tool}"
                                                        class="sapUiNoMarginTop sapUiNoMarginBottom"
                                                    />
                                                </customData>
                                            </ToggleButton>
                                        </l:HorizontalLayout>
                                    </HBox> 



         


<!-- 
                                    <f:GridList
		id="gridList" width="100%"
		mode="None"
		items="{ path: 'portfolioModel>/tools' }"
		selectionChange="onSelectionChange"
		delete="onDelete"
		class="sapUiResponsiveContentPadding">

		<f:GridListItem >
			<VBox height="100%" width="100%">
					<HBox height="100%" class="sapUiSmallMargin" alignItems="Center" >
					
					<VBox>
						<Title text="{portfolioModel>tool}" wrapping="true" />
						<Label text="{portfolioModel>tool}" wrapping="true" />
					</VBox>
				</HBox>
			</VBox>
		</f:GridListItem>
	</f:GridList> -->
                    </f:GridContainer>


                </Panel>


 <core:Icon class="sapUiTinyMarginTop" src="sap-icon://study-leave" ></core:Icon>
                            <Panel headerText="Qualifications" height="100%">
				<layoutData>
					<FlexItemData baseSize="38%" />
				</layoutData>
                    <f:GridContainer>
                        <f:layout>
                            <f:GridContainerSettings
                                rowSize="4rem"
                                columnSize="4rem"
                            />
                        </f:layout>

                        <HBox class="sapUiSmallMarginTopBottom">
                                        <l:HorizontalLayout
                                            id="qualifications"
                                            allowWrapping="true"
                                            content="{}"
                                        >
                                            <ToggleButton
                                                text="{portfolioModel>qualification}"
                                                press="onPressToggle1"
                                                class="sapUiSmallMarginEnd sapUiTinyMarginBottom"
                                                pressed="{portfolioModel>pressed}"

                                            >
                                                <customData>
                                                    <core:CustomData
                                                        key="qualification"
                                                        value="{portfolioModel>qualification}"
                                                        class="sapUiNoMarginTop sapUiNoMarginBottom"
                                                    />
                                                </customData>
                                            </ToggleButton>
                                        </l:HorizontalLayout>
                                    </HBox>

                    </f:GridContainer>

                    	
			</Panel >
              </HBox>
                <!-- </VBox> -->
            <!-- </ScrollContainer> -->
        </f:content>
    </f:DynamicPage>
</mvc:View>
