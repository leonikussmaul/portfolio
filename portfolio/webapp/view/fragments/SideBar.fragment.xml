<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:tnt="sap.tnt"
    xmlns:core="sap.ui.core"
>
    <tnt:SideNavigation
        id="sideNavigation"
        expanded="false"
        selectedKey="{/selectedKey}"
        itemSelect=".onItemSelect"
    >
        <tnt:NavigationList>
            <tnt:NavigationListItem
                icon="sap-icon://menu2"
                hasExpander="false"
                select="onToggleSideMenu"
            />

            <tnt:NavigationListItem
                text="Portfolio"
                icon="sap-icon://business-objects-mobile"
                select="onNavToPortfolio"
                tooltip="Go to the Portfolio Overview"
            />

             <tnt:NavigationListItem
                text="Skills &amp; Tools"
                icon="sap-icon://developer-settings"
                select="onNavToSkills"
                tooltip="Go to the Skills Overview"
            />


            	

        </tnt:NavigationList>
        <tnt:fixedItem>
            <tnt:NavigationList>
             
              <tnt:NavigationListItem
                    text="Email"
                    select="onOpenEmail"
                    icon="sap-icon://email"
                />

                <tnt:NavigationListItem
                    text="About Me"
                    select="onOpenAbout"
                    icon="sap-icon://hint"
                />
            </tnt:NavigationList>
        </tnt:fixedItem>
    </tnt:SideNavigation>
</core:FragmentDefinition>
