<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
>
    <Dialog
        draggable="true"
        contentWidth="700px"
        contentHeight="500px"
    >
        <customHeader>
            <Bar>
                <contentMiddle>
                    <Title
                        text="About Me"
                        id="hiThere"
                    />
                </contentMiddle>
                <contentRight>
                    <!-- <Title text="About Me" /> -->
                    <Button
                        icon="sap-icon://decline"
                        press="onCancelDialogPress"
                    />
                </contentRight>
            </Bar>
        </customHeader>

        <Page
            id="infoPage"
            showHeader="false"
        >
            <l:VerticalLayout
                class="sapUiContentPadding"
                width="100%"
            >
                <VBox
                    width="100%"
                    height="80%"
                >
                    <HBox>
                        <FormattedText htmlText="{portfolioModel>/aboutMe}" />
                    </HBox>

                    <HBox>
                        <Image
                            src="./images/aboutMe.jpeg"
                            width="100%"
                            class="sapUiMediumMarginTop"
                        />
                    </HBox>
                </VBox>
            </l:VerticalLayout>
        </Page>

        <footer>
            <Toolbar design="Auto">
                <content>
                    <ToolbarSpacer />
                    <Button
                        type="Accept"
                        icon="sap-icon://email"
                        press="onOpenEmail"
                        text="Reach out"
                    />
                </content>
            </Toolbar>
        </footer>
    </Dialog>
</core:FragmentDefinition>
